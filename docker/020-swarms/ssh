#!/bin/bash

# Version: 2021-08-31

# -----------------------------------------------------------------
#
# Document purpose of script here.
#
# -----------------------------------------------------------------
#
# SSH to a host.
#
# -----------------------------------------------------------------
# Check mlkctxt to check. If void, no check will be performed. Use NOTNULL to
# enforce any context.
MATCH_MLKCTXT=NOTNULL
# Remote SSH username. Mandatory.
USER=$MLKC_CELL_RAW_DATA_SSH_USER
# Host. Mandatory.
HOST=$MLKC_CELL_RAW_DATA_SSH_HOST
# SSH port. Defaults to 22.
PORT=
# Amazon AWS PEM key (itÂ´s a path to a file, or blank if not applicable).
AWS_PEM=





# ---

# Check mlkctxt
if command -v mlkctxt &> /dev/null ; then

  if ! mlkctxt -c $MATCH_MLKCTXT ; then exit 1 ; fi

fi

# User
if [ -z $USER ] ; then

  echo USER is mandatory, exiting...
  exit 1

fi

# User
if [ -z $HOST ] ; then

  echo HOST is mandatory, exiting...
  exit 1

fi

# Port
PORT_F=22
if [ ! -z "${PORT}" ] ; then PORT_F=$PORT ; fi

# Amazon PEM
if [ ! -z $AWS_PEM ] ; then

    RSH_OPTIONS="-i ${AWS_PEM} -p ${PORT_F}"

else

    RSH_OPTIONS="-p ${PORT_F}"

fi

# The command
SSH="ssh ${RSH_OPTIONS} "

# Command
COMMAND="${SSH} ${USER}@${HOST}"

# eval $COMMAND
eval $COMMAND
